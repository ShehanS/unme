<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="603dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:divider="@drawable/divider"
                android:orientation="vertical"
                android:padding="10dp"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name" />

                <EditText
                    android:id="@+id/guestName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputbox"
                    android:ems="10"
                    android:hint="Guest Name"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textColor="@color/color1" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact" />

                <EditText
                    android:id="@+id/guestContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputbox"
                    android:ems="10"
                    android:hint="Contact"
                    android:inputType="textPostalAddress"
                    android:padding="16dp"
                    android:textColor="@color/color1" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Members" />

                <EditText
                    android:id="@+id/guestCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputbox"
                    android:ems="10"
                    android:hint="Guest Count"
                    android:inputType="number"
                    android:padding="16dp"
                    android:text="0"
                    android:textColor="@color/color1" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Priority " />

                <EditText
                    android:id="@+id/guestPriority "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputbox"
                    android:ems="10"
                    android:hint="Guest Count"
                    android:inputType="number"
                    android:padding="16dp"
                    android:text="0"
                    android:textColor="@color/color1" />

                <Button
                    android:id="@+id/btnUpdateGuest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:text="Update"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnGuestDelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:text="Delete"
                    android:textColor="@color/white" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Change Guest"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>